{
  "name": "@banegasn/components",
  "version": "1.0.0",
  "private": true,
  "description": "Banegasn component library monorepo using Turborepo and PNPM",
  "scripts": {
    "build": "turbo run build",
    "build:gh-pages": "pnpm build --filter='./packages/*' && pnpm --filter @apps/angular-app build:gh-pages",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "publish:npm": "pnpm build && pnpm publish -r --filter=\"./packages/*\" --no-git-checks --registry https://registry.npmjs.org/",
    "publish:github": "pnpm build && pnpm publish -r --filter=\"./packages/*\" --no-git-checks --registry https://npm.pkg.github.com",
    "publish:both": "pnpm publish:npm && pnpm publish:github",
    "version:patch": "pnpm --filter './packages/*' exec -- npm version patch",
    "version:minor": "pnpm --filter './packages/*' exec -- npm version minor",
    "version:major": "pnpm --filter './packages/*' exec -- npm version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/banegasn/components.git"
  },
  "author": "banegasn",
  "license": "MIT",
  "devDependencies": {
    "turbo": "^2.1.3"
  },
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=22.16.0",
    "pnpm": ">=9.0.0"
  }
}
